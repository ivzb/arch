<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Intermediate style to make further style extensions below easier to follow -->
    <style name="TextAppearance.Arch.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <!-- Navigation -->
    <style name="Widget.Arch.NavigationBarContentFrameLayout" parent="android:Widget.Material">
        <item name="navigationBarBorderColor">?attr/archNavigationBarDividerColor</item>
        <item name="navigationBarBorderSize">1dp</item>
    </style>

    <style name="Widget.Arch.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="HashtagArchDecoration">
<!--        <item name="android:drawable">@drawable/hashtag_io19</item>-->
        <item name="margin">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="Widget.Arch" parent="@android:style/Widget.Material" />

    <style name="Widget.Arch.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.Arch.Feed.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?android:attr/colorControlHighlight</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">@dimen/feed_card_corner_radius</item>
    </style>

    <style name="Widget.Arch.MultilineBody">
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- Misc -->
    <style name="Widget.Arch.EmptyResults">
        <item name="android:drawablePadding">@dimen/margin_normal</item>
<!--        <item name="android:drawableTop">@drawable/no_items_found_204</item>-->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Section headers -->
    <style name="TextAppearance.Arch.Overline" parent="@style/TextAppearance.Arch.Body2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Onboarding -->
    <style name="Widget.Arch.OnboardingText">
        <item name="android:textAppearance">@style/TextAppearance.Arch.H1</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <!-- Text appearances -->

    <!-- For titles, e.g. Event Detail, Speaker Detail -->
    <style name="TextAppearance.Arch.H1" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/text_size_h1</item>
    </style>

    <!-- For smaller titles, e.g. Schedule day decorations -->
    <style name="TextAppearance.Arch.H2" parent="@style/TextAppearance.Arch.H1">
        <item name="android:textSize">@dimen/text_size_h2</item>
    </style>

    <!-- For other prominent text -->
    <style name="TextAppearance.Arch.H3" parent="@style/TextAppearance.Arch.H1">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="TextAppearance.Arch.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- List item primary text, e.g. event titles, codelab titles -->
    <style name="TextAppearance.Arch.ListPrimary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- Dialogs -->
    <style name="TextAppearance.Arch.Dialog.Label" parent="@style/TextAppearance.Arch.ListPrimary" />

    <style name="Widget.Arch.Dialog.ActionButton" parent="">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/margin_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Settings -->
    <style name="Widget.Arch.Settings" />

    <style name="Widget.Arch.Settings.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="switchPadding">@dimen/margin_small</item>
        <item name="switchTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.Arch.Settings.Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textAppearance">?textAppearanceBody2</item>
    </style>
</resources>