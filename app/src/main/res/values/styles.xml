    <style name="HashtagIoDecoration">
        <item name="android:drawable">@drawable/hashtag_io19</item>
        <item name="margin">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="Widget.IOSched" parent="@android:style/Widget.Material" />

    <style name="Widget.IOSched.AppBar" parent="@style/Widget.Design.AppBarLayout">
